<Window x:Class="EggFarmSystem.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" MinHeight="500" MinWidth="800" Background="#0C0C0C"
        WindowState="Maximized" WindowStyle="None" Style="{StaticResource Window.MainWindowKey}"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
			<RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="DASHBOARD" x:Name="mnuDashboard"  />
            <MenuItem Header="PAKAN" x:Name="mnuPakan" />
            <MenuItem Header="PENYUSUTAN" x:Name="mnuPenyusutan" />
            <MenuItem Header="PRODUKSI" x:Name="mnuProduksi" />
            <MenuItem Header="ABSENSI" x:Name="mnuAbsensi" />            
            <MenuItem Header="MASTER" IsChecked="True" x:Name="mnuMaster" Click="mnuMaster_Click" />
            <MenuItem Header="SETTINGS" x:Name="mnuSettings" />
            <MenuItem Header="LAPORAN" />
        </Menu>
        <ScrollViewer x:Name="scrContent" Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Auto"></ScrollViewer>
    </Grid>
</Window>
